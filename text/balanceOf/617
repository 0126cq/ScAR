"function closeCreditAccount(address to, DataTypes.Exchange[] calldata paths)        external        override        whenNotPaused         nonReentrant    {        address creditAccount = getCreditAccountOrRevert(msg.sender);         _convertAllAssetsToUnderlying(creditAccount, paths);         uint256 totalValue = IERC20(underlyingToken).<mask0>;         (, uint256 remainingFunds) = _closeCreditAccountImpl(            creditAccount,            Constants.OPERATION_CLOSURE,            totalValue,            msg.sender,            address(0),            to        );         emit CloseCreditAccount(msg.sender, to, remainingFunds);     }"