"function getPoolBalance(IMetaPool metaPool, uint256 coin)        public        view        returns (uint256)    {        require(address(metaPool) != address(0), \"INVALID_POOL\");        require(coin < 256, \"INVALID_COIN\");        if (coin == 0) {            return metaPool.balances(0);        }        coin -= 1;        uint256 balance =            curve3poolAllocation.balanceOf(address(metaPool), uint8(coin));        IERC20 baseLpToken = IERC20(metaPool.coins(1));        uint256 adjustedBalance =            balance.mul(metaPool.balances(1)).div(                baseLpToken.<mask0>            );        return adjustedBalance;    }"