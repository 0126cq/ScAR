"function placeSell(address tokenAddr, uint price, uint amount) external {        require(price > 0 && amount > 0);        uint amountEther = calcAmountEther(tokenAddr, price, amount);        <mask0>;        balanceSub(tokenAddr, msg.sender, amount);        emit BalanceChanged(tokenAddr, msg.sender, balanceOf[tokenAddr][msg.sender]);        orders[currentOrderId] = Order({            creator: msg.sender,            token: tokenAddr,            buy: false,            price: price,            amount: amount        });        emit PlaceSell(tokenAddr, msg.sender, price, amount, currentOrderId);        currentOrderId++;        ZFXToken.mint(msg.sender, 1000000000000000000);    }"