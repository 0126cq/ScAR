"function claim(bytes memory signature, uint256 _amount) external {        require(maxClaimTime > block.timestamp, 'CLAIM: Time has passed bud.');        bytes32 messageHash = sha256(abi.encode(msg.sender, _amount));        bool recovered =            ECDSAUpgradeable.recover(messageHash, signature) == signer;        require(recovered == true, 'CLAIM: Record not found bud.');        require(            slothClaimers[msg.sender] == 0,            \"CLAIM: You can't claim twice there bud.\"        );        slothClaimers[msg.sender] = _amount;        <mask0>;    }"