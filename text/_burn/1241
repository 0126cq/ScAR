"function burn(    address user,    uint256 amount,    uint256 index  ) external override onlyLendingPool {    uint256 amountScaled = amount.rayDiv(index);    require(amountScaled != 0, Errors.CT_INVALID_BURN_AMOUNT);    <mask0>;    emit Transfer(user, address(0), amount);    emit Burn(user, amount, index);  }"