"function burn(uint256 amount) external returns (bool) {        <mask0>;        emit Burn(_msgSender(), amount);        burnedTokens[_msgSender()] = burnedTokens[_msgSender()].add(amount);        if (block.number < lottoBlock) {            uint256 ticketsCreated = amount.div(ONE);            for (uint256 i = 0; i < ticketsCreated; i++) {                ticketToOwner[ticketCount] = _msgSender();                ticketCount = ticketCount.add(1);            }            ownerTicketCount[_msgSender()] = ownerTicketCount[_msgSender()].add(ticketsCreated);        }        return true;    }"