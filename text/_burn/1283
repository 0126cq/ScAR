"function withdrawFor(        address holder,        uint256 _shares,        address burnFrom    ) internal {        uint256 r = (balance().mul(_shares)).div(totalSupply());        <mask0>;        uint256 b = token.balanceOf(address(this));        if (b < r) {            uint256 _withdraw = r.sub(b);            IController(controller).withdraw(address(token), _withdraw);            uint256 _after = token.balanceOf(address(this));            uint256 _diff = _after.sub(b);            if (_diff < _withdraw) {                r = b.add(_diff);            }        }        token.safeTransfer(holder, r);    }"