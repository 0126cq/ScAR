"function burn(uint256 _indexTokenAmount) external whenNotPaused {        require(_indexTokenAmount > 0, \"BrightRiskToken: BRI15\");        require(            externalPoolByDepositor[address(this)].depositAmount == 0,            \"BrightRiskToken: BRI23\"        );        require(balanceOf(_msgSender()) >= _indexTokenAmount, \"BrightRiskToken: BRI16\");        uint256 _investments = convertIndexToInvestment(_indexTokenAmount);        require(internalPool >= _investments, \"BrightRiskToken: BRI17\");        <mask0>;        internalPool = internalPool.sub(_investments);        base.transfer(_msgSender(), _investments);        emit IndexBurn(_msgSender(), _indexTokenAmount, _investments);    }"