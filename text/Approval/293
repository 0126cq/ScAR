"function approveProxy(address _from, address _spender, uint256 _value,        uint8 _v,bytes32 _r, bytes32 _s, string _comment) returns (bool success) {        if(balances[_from] < _value) throw;        uint256 nonce = nonces[_from];        bytes32 hash = sha3(_from,_spender,_value,nonce);        bytes memory prefix = \"\\x19Ethereum Signed Message:\\n32\";        bytes32 prefixedHash = sha3(prefix, hash);        if(_from != ecrecover(prefixedHash,_v,_r,_s)) throw;        allowed[_from][_spender] = _value;        <mask0>;        lastComment[_from] = _comment;        comments[_from][nonce] = _comment;        nonces[_from] = nonce + 1;        return true;    }"