"function approveAndCall(address _spender, uint256 _value, bytes _extraData) whenTransferEnabled public returns (bool success) {    require((_value == 0) || (allowed[msg.sender][_spender] == 0));    allowed[msg.sender][_spender] = _value;    <mask0>;    require(_spender.call(bytes4(bytes32(keccak256(\"receiveApproval(address,uint256,address,bytes)\"))), msg.sender, _value, this, _extraData));    return true;  }"