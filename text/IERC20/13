"function lockTokens(address _token, uint256 _amount, uint256 _duration) external payable {        require(_duration <= 50 * 365 days, \"Lockup must be 50 years or less\");         if (_token == address(0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE)) {            require(msg.value == _amount, \"Amount must match msg.value\");        } else {            require(IERC20(_token).balanceOf(msg.sender) >= _amount, \"Insufficient balance\");            <mask0>.safeTransferFrom(msg.sender, address(this), _amount);        }        Lockup memory lockup = Lockup(msg.sender, _token, _amount, block.timestamp + _duration, true);        lockups[idCounter] = lockup;        idCounter++;        emit TokensLocked(_token, _amount, block.timestamp + _duration);    }"