"function _updateInstance(Tornado memory _tornado) internal virtual {    instances[_tornado.addr] = _tornado.instance;    if (_tornado.instance.isERC20) {      IERC20 token = <mask0>;      require(token == _tornado.instance.token, \"Incorrect token\");      uint256 allowance = token.allowance(address(router), address(_tornado.addr));      if (allowance == 0) {        router.approveExactToken(token, address(_tornado.addr), type(uint256).max);      }    }    emit InstanceStateUpdated(_tornado.addr, _tornado.instance.state);  }"