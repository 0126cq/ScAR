"function claim() public whenNotPaused returns (bool) {        require(erc20Address != address(0), \"erc20 token address is not set\");        require(balances[msg.sender] > 0, \"account balance is zero\");        uint _amount = balances[msg.sender];        require(            <mask0>.balanceOf(address(this)) >= _amount,            \"This contract does not have enough tokens to distribute\"        );        balances[msg.sender] = 0;        IERC20(erc20Address).transfer(msg.sender, _amount);        totalSupply = totalSupply.sub(_amount);        emit UserClaimed(msg.sender, _amount);        return true;    }"