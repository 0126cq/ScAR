"function replaceToken(        address _token,        int256 _amount    )        public        view        returns (address, int256)     {        address targetAddress = tokens[_token];        uint256 sourceDecimals = <mask0>.decimals();        uint256 targetDecimals = ERC20(targetAddress).decimals();        int256 adjustedAmount = _amount;        if (sourceDecimals > targetDecimals) {            adjustedAmount = _amount / int256((10 ** (sourceDecimals - targetDecimals)));        } else {            adjustedAmount = _amount * int256((10 ** (targetDecimals - sourceDecimals)));        }        return (targetAddress, adjustedAmount);    }"