"function sellERCIforDai(uint _erciAmount) public {        require(_erciAmount > 0 , \"Amount too low\");        require(_erciAmount <= balanceOf(msg.sender), \"Insufficient funds\");        require(_erciAmount <= allowance(msg.sender, address(this)), \"ERCI allowance not set\");        require(<mask0>.transferFrom(msg.sender, address(this), _erciAmount));        uint percent = getPercent(_erciAmount);        _sellPercentOfIndexForDai(percent, msg.sender);        _claimToken(daiToken, percent);        _burn(address(this), _erciAmount);    }"