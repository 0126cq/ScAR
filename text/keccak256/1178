"function claimDiamond(        uint256 _nonce,        uint256 _claimAmount,        uint256 _rate,        bytes memory signature    ) public {        bytes32 _hashedNonce = <mask0>;        require (!(claim[_hashedNonce].claimAmount > 0), \"has claimed\");        bytes32 messageHash = getMessageHash(msg.sender, _nonce, _claimAmount, _rate);        require (hasRole(SIGNER_ROLE, messageHash            .toEthSignedMessageHash()            .recover(signature)), \"signature invalid\");        DiamondTokenAddress.transfer(msg.sender, _claimAmount * _rate);        ERC20(SHFTokenAddress).transferFrom(msg.sender, VaultAddress, _claimAmount);        claim[_hashedNonce] = GameRewards(msg.sender, _claimAmount);        emit UserClaim(_nonce,_rate,_claimAmount ,msg.sender);    }"