"function linkNodeAddress(address nodeAddress, bytes calldata sig) external {        uint validatorId = getValidatorId(msg.sender);        require(            <mask0>.toEthSignedMessageHash().recover(sig) == nodeAddress,            \"Signature is not pass\"        );        require(_validatorAddressToId[nodeAddress] == 0, \"Node address is a validator\");        _addNodeAddress(validatorId, nodeAddress);        emit NodeAddressWasAdded(validatorId, nodeAddress);    }"