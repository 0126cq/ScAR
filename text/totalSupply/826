"function calcNewShardLPTokensToIssue(uint256 amount) public view returns (uint256) {        uint256 pool = _shardLPExtra.underlyingSupply;        if (pool == 0) { return amount; }        uint256 proportion = amount * 10**18 / (pool + amount);        return proportion * shardLPToken.<mask0> / (10**18 - proportion);    }"