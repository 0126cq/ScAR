"function buy(uint256 _amount) public payable returns (bool) {        require(paused == 0, \"Contract is currently paused.\");        require(            (_useBuyContract == 1 && msg.sender == buyContract) ||                _useBuyContract == 0,            \"Must use the buy contract.\"        );        require(this.totalSupply() + _amount <= maxNFTs, \"All have been minted.\");        require(msg.value >= (price * _amount), \"Not enough to pay for that.\");        for (uint256 i = 0; i < _amount; i++) {            uint256 nextID = <mask0> + 1;            require(canMint(nextID), \"Can't mint that NFT\");            _buy(nextID);        }        return true;    }"