"function mintGlitches(uint256 amount) external payable whenSaleActive {        require(amount <= maxPerMint, \"TheLostGlitches: Amount exceeds max per mint\");        require(<mask0> + amount <= MAX_GLITCHES, \"TheLostGlitches: Purchase would exceed cap\");        require(mintPrice * amount <= msg.value, \"TheLostGlitches: Ether value sent is not correct\");        for(uint256 i = 0; i < amount; i++) {            uint256 mintIndex = totalSupply() + 1;            if (totalSupply() < MAX_GLITCHES) {                _safeMint(msg.sender, mintIndex);            }        }    }"