"function stakeOrSend( address _recipient, bool _stake, uint _amount ) internal returns ( uint ) {        if ( !_stake ) {             Sigma.transfer( _recipient, _amount );         } else {             if ( useHelper ) {                 Sigma.<mask0>;                stakingHelper.stake( _amount, _recipient );            } else {                Sigma.approve( address(staking), _amount );                staking.stake( _amount, _recipient );            }        }        return _amount;    }"