"function stakeOrSend( address _recipient, bool _stake, uint _amount ) internal returns ( uint ) {        if ( !_stake ) {             Sigma.transfer( _recipient, _amount );         } else {             if ( useHelper ) {                 Sigma.approve( address(stakingHelper), _amount );                stakingHelper.stake( _amount, _recipient );            } else {                Sigma.<mask0>;                staking.stake( _amount, _recipient );            }        }        return _amount;    }"