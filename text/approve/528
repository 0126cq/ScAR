"function deposit( address token, uint amount ) public onlyPolicy() {        require( !exceedsLimit( token, amount ) );         treasury.manage( token, amount );         IERC20( token ).approve( address( lendingPool ), amount );         lendingPool.deposit( token, amount, address(this), referralCode );         uint value = treasury.valueOf( token, amount );         accountingFor( token, amount, value, true );         if ( depositToTreasury ) {             address aToken = aTokenRegistry[ token ];             uint aBalance = IERC20( aToken ).balanceOf( address(this) );             IERC20( aToken ).<mask0>;             treasury.deposit( aBalance, aToken, value );         }    }"