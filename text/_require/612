"function permit(        address owner,        address spender,        uint256 value,        uint256 deadline,        uint8 v,        bytes32 r,        bytes32 s    ) public virtual override {        <mask0>;        uint256 nonce = _nonces[owner];        bytes32 structHash = keccak256(abi.encode(_PERMIT_TYPE_HASH, owner, spender, value, nonce, deadline));        bytes32 hash = _hashTypedDataV4(structHash);        address signer = ecrecover(hash, v, r, s);        _require((signer != address(0)) && (signer == owner), Errors.INVALID_SIGNATURE);        _nonces[owner] = nonce + 1;        _setAllowance(owner, spender, value);    }"