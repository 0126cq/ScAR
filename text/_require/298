"function transferFrom(        address sender,        address recipient,        uint256 amount    ) public override returns (bool) {        uint256 currentAllowance = allowance(sender, msg.sender);        <mask0>;        _transfer(sender, recipient, amount);        if (msg.sender != sender && currentAllowance != uint256(-1)) {            _approve(sender, msg.sender, currentAllowance - amount);        }        return true;    }"