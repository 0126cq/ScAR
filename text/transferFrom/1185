"function stakeCrossChain (uint256 amount) public whenNotPaused{        require(            fxChildTunnel != address(0x0),            \"CHILD_TUNNEL_NOT_SET\"        );        IERC20(cntToken).<mask0>;        IERC20(cntToken).approve(erc20Predicate, amount);        bytes memory depositData = abi.encode(amount);        rootChainManager.depositFor(fxChildTunnel,cntToken,depositData);        _sendMessageToChild(            abi.encode(                msg.sender,                amount            )        );        emit InitiatedCrossChainStaking(msg.sender, amount);    }"