"function mint(    uint quantity,    uint maxQuantity,    uint bonusQuantity,    uint8 v, bytes32 r, bytes32 s  ) external {    require(      (quantity > 0 || bonusQuantity > 0) &&      isAdmin(ecrecover(        keccak256(abi.encodePacked(          \"\\x19Ethereum Signed Message:\\n32\",          keccak256(abi.encodePacked(            \"b a l a n c e\",            msg.sender,            quantity <= maxQuantity,            maxQuantity,            bonusQuantity,            (state == 1 || state == 2),            balanceOf(msg.sender, 0)          ))        ))        , v, r, s      )),      'minting not allowed'    );    if (quantity > 0) {      require(        _erc20.<mask0>,        'payment failed'      );    }    _mint(msg.sender, 0, quantity + bonusQuantity, \"\");    emit Mint(msg.sender, quantity + bonusQuantity);  }"