"function confirmPurchase (uint _dealNumber, string memory _message, uint _amount) external     condition(_amount == (2 * deals[_dealNumber].valueSeller)) {        require (deals[_dealNumber].valueBuyer==0, \"don't do it twice!\");        require (_amount!=0, \"Wrong value!\");        require (USDT.balanceOf(msg.sender)>=_amount, \"Not enough funds!\");        uint balBef = USDT.balanceOf(address(this));        USDT.<mask0>;        uint balAf = USDT.balanceOf(address(this));        require (balAf-balBef == _amount, \"Dont Receive Your Money!\");        deals[_dealNumber].buyer = msg.sender;        deals[_dealNumber].messageBuyer = _message;        deals[_dealNumber].valueBuyer = _amount;        }"