"function buy(uint256 totalUSDT) external {        address from = msg.sender;        require(totalUSDT > 0, 'You need to send something...');        uint256 userBalance = usdtToken.balanceOf(from);        require(userBalance >= totalUSDT, 'Your balance is lower than the required amount in USDT...');        uint256 cleverAIToGet = userBalance * buyPrice;        uint usdtAllowance = usdtToken.allowance(from, address(this));        require(usdtAllowance > totalUSDT, 'Not enough allowance, need to allow more USDT');        usdtToken.<mask0>;        cleverAI.mint(msg.sender, cleverAIToGet);        investment = investment + totalUSDT;        fee = fee + (totalUSDT * 5 / 100);          emit BuyCLAI(from, usdtAllowance, totalUSDT);    }"