"function distribShares(address tokenOwner, address payToken, uint256 amount) internal {        if(amount > 0){            uint256[] memory _shares = calcShares(tokenOwner, amount);            if(payToken == address(0)){                if(tokenOwner != creator && _shares[2] > 0){                    require(payable(tokenOwner).send(_shares[2]));                }                if(_shares[0] > 0){                    require(payable(creator).send(_shares[0]));                }                if(_shares[1] > 0){                    require(payable(moderator).send(_shares[1]));                }            } else {                ERC20 t = ERC20(payToken);                require(t.<mask0>);                if(tokenOwner != creator  && _shares[2] > 0){                    require(t.transfer(tokenOwner, _shares[2]));                }                if(_shares[0] > 0){                    require(t.transfer(creator, _shares[0]));                }                if(_shares[1] > 0){                    require(t.transfer(moderator, _shares[1]));                }            }        }    }"