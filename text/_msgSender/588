"function transferFrom(    address sender,    address recipient,    uint256 amount  ) public virtual override returns (bool) {    if (tax > 0 && isNotInternalTransfer()) {      (uint256 burned, uint256 untaxed) = _calculateTax(amount);      uint256 currentAllowance = allowance(sender, <mask0>);      if (currentAllowance < amount) {        revert InvalidAllowance(currentAllowance, amount);      }      unchecked {        _approve(sender, _msgSender(), currentAllowance - burned);      }      _burn(sender, burned);      return super.transferFrom(sender, recipient, untaxed);    } else {      return super.transferFrom(sender, recipient, amount);    }  }"