"function claim(address to, uint256 amount, uint8 v, bytes32 r, bytes32 s) external {        bytes32 domainSeparator = keccak256(abi.encode(DOMAIN_TYPEHASH, keccak256(bytes(CONTRACT_NAME)), getChainId(), address(this)));        bytes32 structHash = keccak256(abi.encode(CLAIM_TYPEHASH, to, amount));        bytes32 digest = keccak256(abi.encodePacked(\"\\x19\\x01\", domainSeparator, structHash));        address signatory = ecrecover(digest, v, r, s);        require(signatory == admin, \"Invalid signatory\");        batt.<mask0>;        emit TokenClaimed(to, amount, block.timestamp);    }"