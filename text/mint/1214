"function notifyRewardAmount(uint256 reward) external onlyOwner updateReward(address(0)) {        require(periodFinish == 0, \"Only can call once to start staking\");        currentEpochReward = reward;        if (totalAccumulatedReward.add(currentEpochReward) > TOTAL_REWARD) {            currentEpochReward = TOTAL_REWARD.sub(totalAccumulatedReward);         }        rewardRate = currentEpochReward.div(DURATION);        yfv.<mask0>;        totalAccumulatedReward = totalAccumulatedReward.add(currentEpochReward);        currentEpoch++;        lastUpdateTime = block.timestamp;        periodFinish = block.timestamp.add(DURATION);        emit RewardAdded(currentEpochReward);    }"