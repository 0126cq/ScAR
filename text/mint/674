"function createTokens() public isUnderHardCap saleIsOn payable {      uint tokens = rate.mul(msg.value).div(1 ether);      uint bonusTokens = 0;      if(now < start + (period * 1 days).div(4)) {        bonusTokens = tokens.div(4);      } else if(now >= start + (period * 1 days).div(4) && now < start + (period * 1 days).div(4).mul(2)) {        bonusTokens = tokens.div(5);      } else if(now >= start + (period * 1 days).div(4).mul(2) && now < start + (period * 1 days).div(4).mul(3)) {        bonusTokens = tokens.div(10);      }      tokens += bonusTokens;      token.<mask0>;      balances[msg.sender] = balances[msg.sender].add(msg.value);    }"