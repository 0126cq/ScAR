"function depositFor(address to, uint256 _amount, bool _lock, address _stakeAddress) public {        require(_amount > 0,\"!>0\");        require(!cooldown, \"cooldown\");        if(_lock){            IERC20(crvBpt).safeTransferFrom(msg.sender, staker, _amount);            _lockCurve();            if(incentiveCrv > 0){                _amount = _amount.add(incentiveCrv);                incentiveCrv = 0;            }        }else{            IERC20(crvBpt).safeTransferFrom(msg.sender, address(this), _amount);            uint256 callIncentive = _amount.mul(lockIncentive).div(FEE_DENOMINATOR);            _amount = _amount.sub(callIncentive);            incentiveCrv = incentiveCrv.add(callIncentive);        }        bool depositOnly = _stakeAddress == address(0);        if(depositOnly){            ITokenMinter(minter).mint(to,_amount);        }else{            ITokenMinter(minter).<mask0>;            IERC20(minter).safeApprove(_stakeAddress,0);            IERC20(minter).safeApprove(_stakeAddress,_amount);            IRewards(_stakeAddress).stakeFor(to,_amount);        }    }"