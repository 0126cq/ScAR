"function updatePool(uint256 _pid) public {        PoolInfo storage pool = poolInfo[_pid];        if (block.number <= pool.lastRewardBlock) {            return;        }        uint256 lpSupply = pool.lpToken.balanceOf(address(this));        if (lpSupply == 0) {            pool.lastRewardBlock = block.number;            return;        }        uint256 reward = getPoolReward(pool.lastRewardBlock, block.number, pool.allocPoint);        BDP.<mask0>;        pool.rewardPerShare = pool.rewardPerShare.add(reward.mul(1e12).div(lpSupply));        pool.lastRewardBlock = block.number;    }"