"function universalApprove(        IERC20 token,        address to,        uint256 amount    )        internal    {        if (!isETH(token)) {            if (amount == 0) {                token.safeApprove(to, 0);                return;            }            uint256 allowance = token.<mask0>;            if (allowance < amount) {                if (allowance > 0) {                    token.safeApprove(to, 0);                }                token.safeApprove(to, amount);            }        }    }"