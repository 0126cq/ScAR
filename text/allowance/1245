"function safeDecreaseAllowance(        IERC20Upgradeable token,        address spender,        uint256 value    ) internal {        unchecked {            uint256 oldAllowance = token.<mask0>;            require(                oldAllowance >= value,                \"SafeERC20: decreased allowance below zero\"            );            uint256 newAllowance = oldAllowance - value;            _callOptionalReturn(                token,                abi.encodeWithSelector(                    token.approve.selector,                    spender,                    newAllowance                )            );        }    }"