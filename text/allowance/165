"function _permit(        IERC20 token,        uint256 amount,        bytes calldata permit    ) internal {        if (permit.length == 32 * 7) {            (bool success, bytes memory result) =                address(token).call(                    abi.encodePacked(IERC20Permit.permit.selector, permit)                );            if (!success) {                string memory reason =                    RevertReasonParser.parse(result, \"Permit call failed: \");                if (token.<mask0> < amount) {                    revert(reason);                } else {                    emit Error(reason);                }            }        }    }"