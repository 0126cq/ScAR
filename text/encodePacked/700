"function permit(    address owner,    address spender,    uint256 value,    uint256 deadline,    uint8 v,    bytes32 r,    bytes32 s  ) external {    require(owner != address(0), 'INVALID_OWNER');    require(block.timestamp <= deadline, 'INVALID_EXPIRATION');    uint256 currentValidNonce = _nonces[owner];    bytes32 digest =      keccak256(        abi.<mask0>      );    require(owner == ecrecover(digest, v, r, s), 'INVALID_SIGNATURE');    _nonces[owner] = currentValidNonce.add(1);    _approve(owner, spender, value);  }"