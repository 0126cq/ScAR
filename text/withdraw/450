"function newStake(uint256 _amount) public {        require(_amount > 0, \"Cannot stake zero\");        uint256 prevAmount = stakes[_msgSender()].amount;        if (prevAmount > 0) {            <mask0>;        }        _amount = _amount.add(prevAmount);        uint256 estimate = estimateReward(_amount);        require(unclaimedReward >= estimate, \"Allocation exhausted\");        require(stakingToken.transferFrom(_msgSender(), address(this), _amount), \"Could not transfer token\");        unclaimedReward = unclaimedReward.sub(estimate);        stakes[_msgSender()] = Stake({createdOn: block.timestamp, amount: _amount, withdrawn: 0});        emit NewStake(_msgSender(), _amount);    }"