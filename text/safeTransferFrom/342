"function pay(address recipient, uint256 amount)        public        onlyGovOrSubGov        breakerNotSet    {        require(initialized, \"MonthlyAllowance::pay: Contract not initialized\");        uint256 epoch = _currentEpoch();        uint256 newPaidThisEpoch = spentPerEpoch[epoch].add(amount);        require(newPaidThisEpoch <= MONTHLY_LIMIT, \"MonthlyAllowance::pay: Monthly allowance exceeded\");        spentPerEpoch[epoch] = newPaidThisEpoch;        SafeERC20.<mask0>;        emit Payment(recipient, amount);    }"