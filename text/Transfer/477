"function destroyTokens(address _owner, uint _amount    ) onlyControllerOrBurner(_owner) returns (bool) {        uint curTotalSupply = getValueAt(totalSupplyHistory, getBlockNumber());        if (curTotalSupply < _amount) throw;        updateValueAtNow(totalSupplyHistory, curTotalSupply - _amount);        var previousBalanceFrom = balanceOf(_owner);        if (previousBalanceFrom < _amount) throw;        updateValueAtNow(balances[_owner], previousBalanceFrom - _amount);        <mask0>;        return true;    }"