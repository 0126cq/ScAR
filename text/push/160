"function bet(uint option) public payable {    require(canBet() == true);    require(msg.value >= MIN_BET);    require(betterInfo[msg.sender].betAmount == 0 || betterInfo[msg.sender].betOption == option);    if (betterInfo[msg.sender].betAmount == 0) {      betterInfo[msg.sender].betOption = option;      numberOfBets[option]++;      betters.<mask0>;    }    betterInfo[msg.sender].betAmount += msg.value;    totalBetAmount += msg.value;    totalAmountsBet[option] += msg.value;    BetMade();   }"