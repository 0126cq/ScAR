"function deposit(uint256 _pid, uint256 _token0) public {        require(_pid < poolInfo.length, \"!_pid\");        PoolInfo storage pool = poolInfo[_pid];        address lpToken = IConvexBoosterV2(convexBooster).getPoolToken(pool.convexPid);        IERC20(lpToken).safeTransferFrom(msg.sender, address(this), _token0);        IERC20(lpToken).<mask0>;        IERC20(lpToken).safeApprove(convexBooster, _token0);        IConvexBooster(convexBooster).depositFor(pool.convexPid, _token0, msg.sender);        deposits[_pid][msg.sender] = deposits[_pid][msg.sender].add(_token0);        emit Deposit(msg.sender, _pid, _token0);    }"