"function isValidSignature(        address signer,        bytes32 hash,        bytes memory signature    ) internal view returns (bool) {        if (Address.isContract(signer)) {            bytes4 selector = IERC1271.isValidSignature.selector;            (bool success, bytes memory returndata) =                signer.staticcall(abi.encodeWithSelector(selector, hash, signature));            return success && abi.<mask0> == selector;        } else {            return ECDSA.recover(hash, signature) == signer;        }    }"