"function burnSingleERC20Capsule(address _capsule, uint256 _id)        external        nonReentrant        onlyValidCapsuleCollections(_capsule)    {        SingleERC20Capsule memory _capsuleData = singleERC20Capsule[_capsule][_id];        require(_capsuleData.tokenAmount > 0, Errors.NOT_ERC20_CAPSULE_ID);        address heldTokenAddress = _capsuleData.tokenAddress;        uint256 tokensHeldById = _capsuleData.tokenAmount;        delete singleERC20Capsule[_capsule][_id];        string memory uri = ICapsule(_capsule).tokenURI(_id);        ICapsule(_capsule).burn(_msgSender(), _id);        IERC20(heldTokenAddress).<mask0>;        emit SingleERC20CapsuleBurnt(_msgSender(), _capsule, heldTokenAddress, tokensHeldById, uri);    }"