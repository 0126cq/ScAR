"function redeemCTRL(uint256 amount)         external        onlyOneBlock        ctrlRedeemable    {        require(amount > 0, 'Idea Fund: cannot redeem CTRL with zero amount');        uint256 toSend = amount.mul(getControlPrice()).div(IOracle(theOracle).wbtcPriceOne()).div(1e10);        require(            IERC20(wbtc).balanceOf(address(this)) >= toSend,            'Idea Fund: Treasury does not currently hold enough wBTC to purchase'        );        require(amount <= IERC20(control).allowance(msg.sender, address(treasury)),             'Treasury: is not approved to burn your CTRL');        ITreasury(treasury).burnControlForIdeaFund(msg.sender, amount);        IERC20(wbtc).<mask0>;        emit RedeemedCTRL(msg.sender, toSend);    }"