"function claim(address token, uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) public {    require(merkleRoot[token] != 0, 'frozen');    require(!isClaimed(token, index), 'Drop already claimed.');    bytes32 node = keccak256(abi.encodePacked(index, account, amount));    require(MerkleProof.verify(merkleProof, merkleRoot[token], node), 'Invalid proof.');    _setClaimed(token, index);    IERC20(token).<mask0>;    emit Claimed(token, index, amount, account, update[token]);  }"