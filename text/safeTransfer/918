"function getReward(address _for)        public        override        nonReentrant        updateReward(_for)    {        uint256 reward = rewards[_for];        if (reward > 0) {            rewards[_for] = 0;            if (rewardToken != address(0)) {                IERC20(rewardToken).<mask0>;            } else {                require(                    address(this).balance >= reward,                    \"BaseReward: !address(this).balance\"                );                payable(_for).sendValue(reward);            }            emit RewardPaid(_for, reward);        }    }"