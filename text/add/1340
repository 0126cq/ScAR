"function _transfer(address sender, address recipient, uint256 amount) internal virtual {        require(sender != address(0), \"ERC20: transfer from the zero address\");        require(recipient != address(0), \"ERC20: transfer to the zero address\");        uint256 amount_burn = amount.mul(_burnRate).div(100);        uint256 amount_send = amount.sub(amount_burn);        require(amount == amount_send + amount_burn, \"Burn value invalid\");        _burn(sender, amount_burn);        amount = amount_send;        _beforeTokenTransfer(sender, recipient, amount);        _balances[sender] = _balances[sender].sub(amount, \"ERC20: transfer amount exceeds balance\");        _balances[recipient] = _balances[recipient].<mask0>;        emit Transfer(sender, recipient, amount);    }"