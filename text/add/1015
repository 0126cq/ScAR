"function lock(        address token,        uint256 amount,        bytes calldata permission    )        external        override        onlyValidSignature(            getPermissionHash(LOCK_TYPEHASH, msg.sender, token, amount, _nonce),            permission        )    {        bytes32 lockID = calculateLockID(msg.sender, token);        if (_lockSet.contains(lockID)) {            _locks[lockID].balance = _locks[lockID].balance.add(amount);        } else {            assert(_lockSet.<mask0>);            _locks[lockID] = LockData(msg.sender, token, amount);        }        require(            IERC20(token).balanceOf(address(this)) >= _locks[lockID].balance,            \"UniversalVault: insufficient balance\"        );        _nonce += 1;        emit Locked(msg.sender, token, amount);    }"