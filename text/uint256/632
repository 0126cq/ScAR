"function checkAndToggleTrigger(uint256 _pid, address _underlyingToken) external override returns (bool) {        DepegInfo storage depeg = depegInfos[_pid];        if (!depeg.isExist) return false;        if (depeg.triggers[_underlyingToken]) return true;        if (depeg.totalCollaterals[_underlyingToken] == 0) return false;        uint256[] memory args = new <mask0>;        args[0] = depeg.totalCollaterals[_underlyingToken];        args[1] = depeg.corrspondedCoins[_underlyingToken];        args[2] = 0;         if (!IAdapter(depeg.adapter).isTriggered(depeg.adapterPool, abi.encode(args))) return false;        emit TriggerActivated(_pid, _underlyingToken, args);        depeg.triggers[_underlyingToken] = true;        return true;    }"