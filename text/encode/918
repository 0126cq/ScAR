"function addBeneficiaryWithSign(        address _beneficiary,        uint256 _tokenAmount,        uint8 v,        bytes32 r,        bytes32 s    ) public {        require(tokenAmounts[_beneficiary] == 0, \"User already added\");        bytes32 digest = keccak256(            abi.encodePacked(                \"\\x19\\x01\",                _domainSeparatorV4(),                keccak256(                    abi.<mask0>                )            )        );        require(ecrecover(digest, v, r, s) == cSigner, \"Invalid signer\");        addBeneficiary(_beneficiary, _tokenAmount);        require(totalAmounts() <= token.balanceOf(address(this)), \"Insufficient token amount\");    }"