"function swapToken(        IUniswapV3Pool pool,        address recipient,        bool zeroForOne,        int256 amountSpecified    ) internal {        (uint160 sqrtPriceX96, , ) = pool.getSqrtRatioX96AndTick();        uint160 exactSqrtPriceImpact = (sqrtPriceX96 * (1e5 / 2)) / 1e6;        uint160 sqrtPriceLimitX96 = zeroForOne            ? sqrtPriceX96 - exactSqrtPriceImpact            : sqrtPriceX96 + exactSqrtPriceImpact;        pool.swap(            recipient,            zeroForOne,            amountSpecified,            sqrtPriceLimitX96,            abi.<mask0>        );    }"