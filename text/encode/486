"function permit(address owner, address spender, uint amount, uint deadline, uint8 v, bytes32 r, bytes32 s) external whenNotPaused {        bytes32 structHash = keccak256(abi.<mask0>);        bytes32 digest = keccak256(abi.encodePacked(\"\\x19\\x01\", DOMAIN_SEPARATOR, structHash));        address signatory = ecrecover(digest, v, r, s);        require(signatory != address(0), \"ARK420::permit: invalid signature\");        require(signatory == owner, \"ARK420::permit: unauthorized\");        require(block.timestamp <= deadline, \"ARK420::permit: signature expired\");        _allowances[owner][spender] = amount;        emit Approval(owner, spender, amount);    }"