"function verify(address signedAddr, bytes memory signature, bool role) internal  view returns (bool) {        require(signedAddr != address(0), \"INVALID_SIGNER\");        bytes32 hash = keccak256(abi.<mask0>);        require (signature.length == 65,\"Invalid signature length\");        bytes32 sigR;        bytes32 sigS;        uint8   sigV;        assembly {            sigR := mload(add(signature, 0x20))            sigS := mload(add(signature, 0x40))            sigV := byte(0, mload(add(signature, 0x60)))        }        bytes32 data =  keccak256(            abi.encodePacked(\"\\x19Ethereum Signed Message:\\n32\", hash)        );        address recovered = ecrecover(                data,                sigV,                sigR,                sigS            );        return            _signer == recovered;    }"