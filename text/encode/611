"function permit(    address holder, address spender, uint256 nonce, uint256 expiry,    bool allowed, uint8 v, bytes32 r, bytes32 s) external override  {    bytes32 digest = keccak256(      abi.encodePacked(        \"\\x19\\x01\",        DOMAIN_SEPARATOR,        keccak256(          abi.<mask0>        )      )    );    require(holder != address(0), \"Dai/invalid-address-0\");    require(holder == ecrecover(digest, v, r, s), \"Dai/invalid-permit\");    require(expiry == 0 || now <= expiry, \"Dai/permit-expired\");    require(nonce == nonces[holder]++, \"Dai/invalid-nonce\");    uint wad = allowed ? uint(-1) : 0;    _allowances[holder][spender] = wad;    emit Approval(holder, spender, wad);  }"