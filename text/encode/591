"function permit(        address holder,        address spender,        uint256 nonce,        uint256 expiry,        bool allowed,        uint8 v,        bytes32 r,        bytes32 s    ) external    {        bytes32 digest =            keccak256(abi.encodePacked(                \"\\x19\\x01\",                DOMAIN_SEPARATOR,                keccak256(abi.<mask0>)        ));        require(holder != address(0), \"Coin/invalid-address-0\");        require(holder == ecrecover(digest, v, r, s), \"Coin/invalid-permit\");        require(expiry == 0 || now <= expiry, \"Coin/permit-expired\");        require(nonce == nonces[holder]++, \"Coin/invalid-nonce\");        uint256 wad = allowed ? uint256(-1) : 0;        allowance[holder][spender] = wad;        emit Approval(holder, spender, wad);    }"