"function setMetadata(uint256 tokenId, uint256 key, string calldata value, bytes calldata signature) public {    address owner = collection.ownerOf(tokenId);    uint256 nonce = collection.getNonce(owner);    address signer = ECDSALibrary.recover(abi.encodePacked(        owner,        nonce,        tokenId,        key,        value      ), signature);    require(      (msg.sender == owner && collection.<mask0>) ||      (signer == owner && collection.hasRole(DAO_ROLE, msg.sender)), \"ND2\"    );    collection.incrementNonce(owner);    metadata[tokenId][key] = value;    emit MetadataUpdated(tokenId, key, value);  }"