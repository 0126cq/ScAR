"function updateCapTable(address who, uint equity, bool isRemoval) public {        require(<mask0>, \"INVALID_ROLE\");        require(equity <= TOTAL_CAP, \"INVALID EQUITY (0-10000)\");        require(equity >= 0, \"INVALID EQUITY (0-10000)\");        FounderAuthorization[] storage auths = _addressToFounderAuthorization[who];        uint equityYes = 0;        for (uint i = 0; i < auths.length; i++) {            if (equity == auths[i].equity && auths[i].approved == true && isRemoval == auths[i].isRemoval) {                equityYes += founderToEquity[auths[i].founder];            }         }        if (equityYes >= 7000) {            if (isRemoval) {                _removeFounder(who);            } else {                _addFounder(who, equity);            }              delete _addressToFounderAuthorization[who];        }     }"